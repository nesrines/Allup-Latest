@model Category
@{
    ViewData["Title"] = "Update Category";
    SelectList selectListParents = new SelectList(ViewBag.ParentCategories, nameof(Category.Id), nameof(Category.Name));
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Edit Category</h1>
</div>

<div class="row justify-content-8">
    <form method="post" enctype="multipart/form-data" class="col-8">
        <div class="form-check">
            <input asp-for="IsMain" class="form-check-input" />
            <label asp-for="IsMain" class="form-check-label"></label>
            <span asp-validation-for="IsMain" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group" id="imageContainer">
            <label asp-for="File"></label>
            <input asp-for="File" accept="image/*" class="form-control-file" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        @if (!string.IsNullOrWhiteSpace(Model.Image))
        {
            <div><img style="width: 100px;" src="~/assets/images/@Model.Image" /></div>
        }
        <div class="from-group" id="parentContainer">
            <label asp-for="ParentId"></label>
            <select asp-for="ParentId" class="form-control" asp-items="@selectListParents">
                <option value="">Select</option>
            </select>
        </div>
        <div class="mt-3">
            <a asp-area="Manage" asp-controller="Category" asp-action="Index" class="d-inline-block me-1 btn btn-primary">Go Back</a>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>